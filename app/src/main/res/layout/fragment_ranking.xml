<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <kr.o3selab.icling.layout.PagerSlidingTabStrip
            android:id="@+id/ranking_indicator"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:pstsUnderlineColor="@color/colorPrimaryDark"
            app:pstsDividerColor="@color/colorPrimaryDark"
            app:pstsTextColorSelected="@color/colorPrimary"
            app:pstsIndicatorColor="@color/colorPrimary"
            app:pstsShouldExpand="true" />

        <android.support.v4.view.ViewPager
            android:id="@+id/ranking_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="48dp" />

    </FrameLayout>

</LinearLayout>