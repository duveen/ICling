<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/setting_profile_imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/default_profile_image"
                app:civ_border_color="#FFFFFFFF"
                app:civ_border_width="2dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="로그인 방법     "
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                    <TextView
                        android:id="@+id/setting_profile_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="이름     "
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                    <TextView
                        android:id="@+id/setting_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="이메일     "
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                    <TextView
                        android:id="@+id/setting_profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="키     "
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                    <TextView
                        android:id="@+id/setting_profile_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="몸무게     "
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                    <TextView
                        android:id="@+id/setting_profile_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="나이     "
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                    <TextView
                        android:id="@+id/setting_profile_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="성별     "
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                    <TextView
                        android:id="@+id/setting_profile_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="바퀴 반지름     "
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                    <TextView
                        android:id="@+id/setting_profile_radius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="가입일     "
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                    <TextView
                        android:id="@+id/setting_profile_regdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size" />

                </TableRow>

            </TableLayout>

            <FrameLayout
                android:id="@+id/setting_profile_unregister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/white_border_with_radius_no_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="회원탈퇴"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>