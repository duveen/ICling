<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ranking_item_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/font_gray"
            android:textSize="27sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ranking_item_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:src="@drawable/rank_1"
            android:visibility="gone" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ranking_item_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="7dp"
            android:padding="10dp"
            android:src="@drawable/default_profile_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <kr.o3selab.icling.layout.FontFitTextView
                android:id="@+id/ranking_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:maxLines="1"
                android:textColor="@color/font_gray"
                android:textSize="20sp" />

            <kr.o3selab.icling.layout.FontFitTextView
                android:id="@+id/ranking_item_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:gravity="center"
                android:maxLines="1"
                android:text="00'00&quot; 000"
                android:textAlignment="center"
                android:textColor="@color/font_gray"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>